{
  "name": "hapi-17-boilerplate",
  "version": "1.0.0",
  "description": "Hapi 17 Boilerplate",
  "main": "server.js",
  "scripts": {
    "start": "npm run start:local",
    "start:local": "SET NODE_ENV=default && nodemon server.js",
    "start:dev": "SET NODE_ENV=development && node server.js --development",
    "start:prod": "SET NODE_ENV=production  && node server.js --prod",
    "test": "jest --coverage",
    "precommit": "lint-staged",
    "lint": "eslint --fix **/*.js ./"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=3.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patelmayankce/hapi-17-boilerplate.git"
  },
  "keywords": [
    "hapi",
    "hapi17",
    "boilerplate",
    "starter-kit",
    "hapi-boilerplate"
  ],
  "author": "Mayank Patel <patelmayankce@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/patelmayankce/hapi-17-boilerplate/issues"
  },
  "homepage": "https://github.com/patelmayankce/hapi-17-boilerplate#readme",
  "dependencies": {
    "bcrypt": "^2.0.1",
    "bluebird": "^3.5.1",
    "boom": "^7.2.0",
    "config": "^1.30.0",
    "glob": "^7.1.2",
    "glue": "^5.0.0",
    "hapi": "^17.5.2",
    "hapi-auth-basic": "^5.0.0",
    "hapi-auth-jwt2": "^8.1.0",
    "hapi-dev-errors": "^3.1.0",
    "hapi-swaggered": "^3.0.3",
    "hapi-swaggered-ui": "^3.0.2",
    "inert": "^5.1.0",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "luxon": "^1.3.1",
    "module-alias": "^2.1.0",
    "mongoose": "^5.1.6",
    "mongoose-deep-populate": "^3.1.1",
    "mrhorse": "^3.0.1",
    "satelize": "^0.2.0",
    "uuid": "^3.3.2",
    "vision": "^5.3.3",
    "zxcvbn": "^4.4.2"
  },
  "_moduleAliases": {
    "@root": ".",
    "@models": "server/models",
    "@plugins": "server/plugins",
    "@routes": "server/routes",
    "@utilities": "server/utilities",
    "@policies": "server/policies",
    "@api": "server/api"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.5",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-prettier-standard": "^2.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "jest": "^23.2.0",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.7",
    "rewire": "^4.0.1"
  }
}
